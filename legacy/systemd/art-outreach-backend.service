[Unit]
Description=Autonomous Art Outreach Scraper - Backend API
After=network.target postgresql.service
Requires=postgresql.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/agent.liquidcanvas.art
Environment="PATH=/var/www/agent.liquidcanvas.art/venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/var/www/agent.liquidcanvas.art/.env
ExecStart=/var/www/agent.liquidcanvas.art/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000 --workers 4
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=art-outreach-backend

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target

